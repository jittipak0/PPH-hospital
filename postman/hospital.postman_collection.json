{
  "info": {
    "name": "Hospital API",
    "_postman_id": "00000000-0000-0000-0000-000000000000",
    "description": "Basic endpoints for health, news, and auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base}}/api/health",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "health"
          ]
        }
      }
    },
    {
      "name": "Public News",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base}}/api/news",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "news"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"admin@example.com\",\"password\":\"admin123\"}"
        },
        "url": {
          "raw": "{{base}}/api/auth/login",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      }
    },
    {
      "name": "Staff Me",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/staff/me",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "staff",
            "me"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://api.hospital.local"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}