            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/staff/me",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "staff",
            "me"
          ]
        }
      }
    },
    {
      "name": "Submit Medical Record Request",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "X-CSRF-TOKEN",
            "value": "{{csrf_token}}"
          },
          {
            "key": "X-Requested-With",
            "value": "XMLHttpRequest"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "full_name",
              "value": "Jane Doe",
              "type": "text"
            },
            {
              "key": "hn",
              "value": "AB123",
              "type": "text"
            },
            {
              "key": "citizen_id",
              "value": "1234567890123",
              "type": "text"
            },
            {
              "key": "phone",
              "value": "0812345678",
              "type": "text"
            },
            {
              "key": "address",
              "value": "123 Example Street",
              "type": "text"
            },
            {
              "key": "consent",
              "value": "yes",
              "type": "text"
            },
            {
              "key": "idcard_file",
              "src": "{{idcard_file}}",
              "type": "file"
            }
          ]
        },
        "url": {
          "raw": "{{base}}/api/forms/medical-record-request",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "forms",
            "medical-record-request"
          ]
        }
      }
    },
